#!/usr/bin/env bash

# Copyright (c) 2014 Joyent Inc., All rights reserved.

set -o errexit
set -o pipefail

timestamp=`date +%Y%m%d%H%M%S`

fatal() {
  printf "$(basename $0): fatal error: $*\n"
  exit 1
}

create_layout() {
  echo "==> Copying files and creating layout"
  [[ ! -d cache ]] && mkdir cache
  [[ ! -d cache/sdc-vmtools-bsd ]] && mkdir cache/sdc-vmtools-bsd
  cp -r src/* cache/sdc-vmtools-bsd/
}

pack_tar() {
  echo "==> Creating tarball"
  cd cache
  tar -czf sdc-vmtools-bsd-$timestamp.tar.gz sdc-vmtools-bsd
  cd ../
}

create_zip() {
  echo "==> Creating zipfile"
  cd cache
  ZIP=`which zip`
  if [[ $? -ne 0 ]]; then
    echo "Cannot find a zip tool. Skipping zip file creation"
  else
    $ZIP -q -r sdc-vmtools-bsd-$timestamp.zip sdc-vmtools-bsd
  fi
  cd ../
}


pack_iso() {
  echo "==> Creating ISO"
  cd cache
  case `uname -s` in
    Darwin)
      hdiutil makehybrid -default-volume-name "SDC Guest Tools" -iso -joliet \
        -o sdc-vmtools-bsd-$timestamp.iso sdc-vmtools-bsd
      ;;
    SunOS)
      mkisofs -J -R -input-charset iso8859-1 -V "SDC Guest Tools" \
        -o sdc-vmtools-bsd-$timestamp.iso sdc-vmtools-bsd
      ;;
    *)
      fatal "Not a supported Operating system. Try it on OSX or SmartOS"
      ;;
  esac
  cd ../
}

# ensure we're always in the right working directory
cd $(dirname $0)/../
echo "==> Starting ISO build"
create_layout
pack_iso
pack_tar
create_zip
echo "==> DONE"
exit 0
